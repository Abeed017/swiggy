pipeline {
    agent any

    stages {
        stage('Clone Repo') {
            steps {
                echo "Assuming Jenkins checks out the repo automatically"
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build('swiggy-clone')
                }
            }
        }

        stage('Run Container') {
            steps {
                script {
                    sh 'docker rm -f swiggy-app || true' // stop & remove any existing container
                    sh 'docker run -d -p 3000:80 --name swiggy-app swiggy-clone'
                }
            }
        }
    }

    post {
        always {
            echo "Pipeline execution completed."
        }
    }
}
